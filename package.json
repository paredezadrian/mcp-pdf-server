{
  "name": "mcp-pdf-server",
  "version": "1.0.4",
  "description": "MCP server for secure PDF processing with text extraction, metadata, and page count features",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-pdf-server": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf",
    "pdf-parse",
    "text-extraction",
    "typescript",
    "ai-tools"
  ],
  "author": "Adrian Paredes",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "pdf-parse": "^1.1.1",
    "zod": "^3.22.4",
    "node-fetch": "^3.3.2",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.4",
    "@types/mime-types": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paredezadrian/mcp-pdf-server.git"
  },
  "bugs": {
    "url": "https://github.com/paredezadrian/mcp-pdf-server/issues"
  },
  "homepage": "https://github.com/paredezadrian/mcp-pdf-server#readme"
}
